
import React, { useEffect, useState } from 'react';
import api from '../api';
import { PieChart, Pie, Cell, ResponsiveContainer, Tooltip as PieTooltip, Legend as PieLegend } from 'recharts';

interface GastosReportProps {
    filters: {
        client: string;
        coverages: string[];
        periods: string[];
    };
    refreshTrigger: number;
}

interface TableRow {
    descCober: string;
    totalUF: number;
    pct: number;
}

interface PieData {
    name: string;
    value: number;
    valuePct: number;
}

interface GastosData {
    tableRows: TableRow[];
    pieData: PieData[];
}

const COLORS = ['#0088FE', '#00C49F', '#FFBB28', '#FF8042', '#8884d8', '#82ca9d', '#ffc658', '#8dd1e1'];

export const GastosReport: React.FC<GastosReportProps> = ({ filters, refreshTrigger }) => {
    const [data, setData] = useState<GastosData | null>(null);
    const [loading, setLoading] = useState(false);

    useEffect(() => {
        // Gastos Report relies on same filters.
        // If we want Gastos report to reflect "Consolidado", logic is in backend.
        if (!filters.client || filters.coverages.length === 0 || filters.periods.length === 0) {
            setData(null);
            return;
        }

        setLoading(true);
        const params = new URLSearchParams();
        params.append('client', filters.client);
        params.append('coverages', filters.coverages.join(','));
        params.append('periods', filters.periods.join(','));

        api.get<GastosData>('/report/gastos', { params })
            .then(res => setData(res.data))
            .catch(err => console.error(err))
            .finally(() => setLoading(false));

    }, [filters, refreshTrigger]);

    if (loading) return <div>Loading Gastos Report...</div>;
    if (!data || data.tableRows.length === 0) return null;

    return (
        <div className="space-y-8 mb-12">
            <h2 className="text-2xl font-bold text-slate-800 border-l-4 border-orange-500 pl-4">Distribuci贸n de Gastos</h2>

            <div className="grid grid-cols-1 md:grid-cols-2 gap-8 items-start">
                {/* Table */}
                <div className="bg-white p-6 rounded-lg shadow border border-slate-200 overflow-hidden">
                    <h3 className="text-lg font-semibold mb-4">Detalle por Prestaci贸n</h3>
                    <div className="overflow-x-auto">
                        <table className="min-w-full text-sm text-left">
                            <thead className="bg-slate-50 text-slate-700 font-medium border-b">
                                <tr>
                                    <th className="px-4 py-3">Prestaci贸n</th>
                                    <th className="px-4 py-3 text-right">Total UF</th>
                                    <th className="px-4 py-3 text-right">%</th>
                                </tr>
                            </thead>
                            <tbody className="divide-y divide-slate-100">
                                {data.tableRows.map((row, idx) => (
                                    <tr key={idx} className="hover:bg-slate-50">
                                        <td className="px-4 py-2 truncate max-w-xs" title={row.descCober}>{row.descCober}</td>
                                        <td className="px-4 py-2 text-right font-medium">{row.totalUF.toLocaleString()}</td>
                                        <td className="px-4 py-2 text-right text-slate-500">{row.pct}%</td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                </div>

                {/* Pie Chart */}
                <div className="bg-white p-6 rounded-lg shadow border border-slate-200 flex flex-col items-center">
                    <h3 className="text-lg font-semibold mb-4">Participaci贸n</h3>
                    <div className="h-80 w-full">
                        <ResponsiveContainer width="100%" height="100%">
                            <PieChart>
                                <Pie
                                    data={data.pieData}
                                    cx="50%"
                                    cy="50%"
                                    outerRadius={100}
                                    fill="#8884d8"
                                    dataKey="value"
                                    nameKey="name"
                                    label={({ cx, cy, midAngle, innerRadius, outerRadius, percent }) => {
                                        // Simple label logic
                                        const RADIAN = Math.PI / 180;
                                        const radius = innerRadius + (outerRadius - innerRadius) * 0.5;
                                        const safeMidAngle = midAngle ?? 0;
                                        const safePercent = percent ?? 0;

                                      //  const _x = cx + radius * Math.cos(-safeMidAngle * RADIAN);
                                       // const _y = cy + radius * Math.sin(-safeMidAngle * RADIAN);

                                        if (safePercent < 0.05) return null; // Hide small labels
                                        return `${(safePercent * 100).toFixed(0)}%`;
                                    }}
                                >
                                    {data.pieData.map((_, index) =>  (
                                        <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} />
                                    ))}
                                </Pie>
                                <PieTooltip
                                            formatter={(value) =>
                                             `${(typeof value === "number" ? value : 0).toFixed(2)} UF`
                        }
                                />  
                                <PieLegend />
                            </PieChart>
                        </ResponsiveContainer>
                    </div>
                </div>
            </div>
        </div>
    );
};
